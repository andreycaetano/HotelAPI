generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id          String    @id @default(uuid())
  username    String    @db.VarChar(255)      @unique 
  password    String    @db.VarChar(255)
  email       String    @db.VarChar(255)      @unique 
  role        String    @db.VarChar(5)        @default("user") 
}

model Country {
  id          String    @id @default(uuid())
  name        String    @db.VarChar(255)      @unique

  cities      City[]
}

model City {
  id          String    @id @default(uuid())
  name        String    @db.VarChar(255)

  countryId   String
  country     Country   @relation(fields: [countryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model TravelTime {
  id            String    @id @default(uuid())
  travel_time   String    @db.VarChar(255)    @unique   
}

model Sports {
  id            String    @id @default(uuid())
  sport         String    @db.VarChar(255)    @unique
}

model Ratings {
  id            String    @id @default(uuid())
  rating        String    @db.VarChar(255)    @unique
}

model Conditions {
  id            String    @id @default(uuid())
  condition     String    @db.VarChar(255)    @unique
}

model Facilities {
  id            String    @id @default(uuid())
  facility      String    @db.VarChar(255)
  icon          String    @db.VarChar(255)
}